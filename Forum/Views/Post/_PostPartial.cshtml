@model PostViewModel
@using Microsoft.AspNetCore.Html

<div class="row post">
    <div class="col-sm-3" style="padding:10px;text-align:center;">
        <img style="margin:auto;border-radius:50px" width="100" height="100" src="@Model.UserPhotoPath" class="img-responsive" />
        <div id="user-name">@Model.AuthorFullName</div>
        <div class="text-info">Owner</div>
        <br />
        <div id="num-of-posts" class="text-primary">Number of Posts:@Model.AuthorNumberOfPosts</div>
        <div id="email" class="text-primary">Email:@Model.AuthorEmail</div>
    </div>
    <div class="col-sm-9" style="padding:20px;">
        <p class="text-center">
            Written on <span id="date">@Model.CreationDate</span>
        </p>
        <p id="text" style="border-width:5px;border-color:blue;">
            @(new HtmlString(Model.Message))
        </p>
    </div>
</div>


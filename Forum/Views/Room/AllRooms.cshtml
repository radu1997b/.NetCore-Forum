<environment include="Development">
    <link rel="stylesheet" href="~/css/Room/RoomTable.css"/>
</environment>

<environment exclude="Development">
    @section Stylesheets{ 
        <link rel="stylesheet" href="~/css/Room/RoomTable.min.css"/>
    }
</environment>

<h2 class="text-center" style="font-family:'Segoe Script';">Forum Rooms</h2>

<div class="container">
    <div class="row">
        <div class="text-center">Your favorite subject is not here? Press <a asp-action="CreateRoom">here</a> to create it.</div>
    </div>
    <br />
    @*Table is filled by datatable. Look into script to modify table data*@
    <div style="width:90%; margin:0 auto;">
        <table id="room-table" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>Room Subject</th>
                    <th>Topic</th>
                    <th>Number Of Posts</th>
                    <th>Creation Date</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<environment include="Development">
    @section Scripts{ 
        <script src="~/js/Room/AllRoomsTableConfig.js"></script>
    }
</environment>
<environment exclude="Development">
    @section Scripts{
        <script src="~/js/Room/AllRoomsTableConfig.min.js"></script>
    }
</environment>

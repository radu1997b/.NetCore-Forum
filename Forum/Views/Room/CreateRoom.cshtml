@model CreateRoomViewModel
<style>
    #page-title {
        font-size: 3em;
        margin-top: 20px;
        font-family: 'Segoe Script';
    }

    #form-container {
        margin-top: 20px;
    }

        #form-container form {
            font-size: 2em;
            font-family: Segoe Script;
        }

        #form-container span {
            font-size: 0.8em;
            font-family: 'Times New Roman';
        }

        #form-container input {
            display: block;
            margin: auto;
            margin-bottom: 10px;
            width: 500px;
            height: 50px;
            font-size: 24px;
            border: 2px solid;
            border-radius: 5px;
            padding-left: 5px;
            font-family: 'Times New Roman';
        }

            #form-container input[type=submit] {
                margin-top: 20px;
                background-color: aqua;
                border-radius: 5px;
            }


                #form-container input[type=submit]:hover {
                    box-shadow: 10px 10px;
                }

    #fomr-container input[type=checkbox] {
        width: 20px;
        height: 20px;
        display: inline;
    }

    

   @@media only screen and (min-width: 768px) {
    #form-container input {
        width: 500px;
    }

    #page-title {
        margin-bottom: 200px;
    }

    #form-container select{
        width:500px;
    }
}

    @@media only screen and (max-width: 767px) {
        #form-container input {
            width: 100%;
        }

        #form-container select{
            width:100%;
        }
    }
</style>


<div class="container" id="form-container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <p id="page-title">Create Room</p>
        </div>
    </div>
    <div class="row text-center">
        <form asp-action="CreateRoom" method="post">
            <span asp-validation-for="RoomName"></span>
            <label asp-for="RoomName"></label>
            <input placeholder="Room Name" asp-for="RoomName" autocomplete="off" />
            <label asp-for="TopicId"></label><br />
            @Html.DropDownListFor(m => m.TopicId, Model.ListOfTopics,null,null)
            <input type="submit" id="submit-btn" />
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<link href="@Url.Content("~/css/Account/RegisterLoginForms.css")" rel="stylesheet" type="text/css" />

<div class="container" id="form-container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <p id="sign-up-text">@ViewData["Title"]</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <div asp-validation-summary="All" class="error-messages text-danger"></div>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" placeholder="Email" autocomplete="off"/>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password" placeholder="Password" autocomplete="off"/>
                <div>
                    <input asp-for="RememberMe" value="Log In"/><span> Remeber me</span>
                </div>
                <input type="submit" id="submit-btn" />
            </form>
        </div>
    </div>
</div>

<script src="~/js/Account/FormManipulation.js"></script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@{
    ViewData["Title"] = "UpdateProfile";
}
@model UpdateProfileViewModel

<environment include="Development">
    @section Stylesheets{
        <link rel="stylesheet" href="~/css/ProfileInfo/UpdateProfile.css" />
    }
</environment>
<environment exclude="Development">
    @section Stylesheets{
        <link rel="stylesheet" href="~/css/ProfileInfo/UpdateProfile.min.css" />
    }
</environment>

<div class="container" id="update-page-container">
    <div class="text-center" id="page-title">Update Profile</div>
    <div class="text-center text-danger" asp-validation-summary="All"></div>
    <form asp-route-Id="@Model.Id" method="post" enctype="multipart/form-data">
        <div class="row update-row">
            <div class="col-sm-3">
                <img src="@Model.UserPhotoPath" class="img-responsive" />
            </div>
            <div class="col-sm-9">
                <input asp-for="ImageInfo" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <span class="text-center text-danger" asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="row update-row">
            <div class="col-sm-6">
                <span>First Name</span>
            </div>
            <div class="col-sm-6">
                <input asp-for="FirstName" value="@Model.FirstName" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <span class="text-center text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="row update-row">
            <div class="col-sm-6">
                <span>Last Name</span>
            </div>
            <div class="col-sm-6">
                <input asp-for="LastName" value="@Model.LastName" />
            </div>
        </div>
        <div class="row update-row">
            <div class="col-sm-6">
                <span>Date of birth</span>
            </div>
            <div class="col-sm-6">
                <input asp-for="DateOfBirth" value="@(Model.DateOfBirth == null ? "" : Model.DateOfBirth.Value.Date.ToString("yyyy-MM-dd"))" />
            </div>
        </div>
        <div class="row text-center">
            <input type="submit" value="Update" />
        </div>
    </form>
</div>

<environment include="Development">
    <script src="~/js/UpdateProfile/UpdateProfile.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/UpdateProfile/UpdateProfile.min.js"></script>
</environment>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


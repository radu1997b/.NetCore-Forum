@model Forum.Web.Areas.AdminPanel.Models.AdminViewModels.TopicUpdateViewModel;

<style>
    #update-topic div {
        text-align: center;
    }

    #update-topic input {
        margin: auto;
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="container" id="update-topic" style="width:inherit;">
    <div class="text-capitalize">Updating Topic</div>
    <form asp-action="UpdateTopic" method="post">
        <span asp-validation-for="TopicName"></span>
        <input asp-for="TopicName" type="text" autocomplete="off"/>
        <input type="submit" class="btn btn-sm" />
        <input asp-for="Id" type="hidden"/>
    </form>
</div>

